@page
@model Book_Store.Pages.CategoryOfBooks.EditModel

@{
    ViewData["Title"] = "Edit";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Category.BookCategoryId" />
            <div class="form-group">
                <label asp-for="Category.BookCategoryName" class="control-label"></label>
                <input asp-for="Category.BookCategoryName" class="form-control" />
                <span asp-validation-for="Category.BookCategoryName" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-danger mx-1">Back</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
